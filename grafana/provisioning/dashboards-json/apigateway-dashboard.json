{
  "id": null,
  "title": "Ocelot API Gateway Metrics",
  "tags": ["apigateway", "otel", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests (RPS)",
      "gridPos": {"x":0,"y":0,"w":12,"h":6},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "{{method}} {{status}}",
          "interval": "",
          "refId": "A"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "nullPointMode": "null",
      "yaxes": [
        {"format":"req/s","label": "RPS","logBase":1,"min":0,"show":true},
        {"format":"short","show":true}
      ]
    },
    {
      "type": "graph",
      "title": "Latency (seconds)",
      "gridPos": {"x":12,"y":0,"w":12,"h":6},
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_server_requests_seconds_bucket[1m])) by (le, method))",
          "legendFormat": "{{method}} p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[1m])) by (le, method))",
          "legendFormat": "{{method}} p95",
          "refId": "B"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "yaxes": [
        {"format":"s","label":"Latency","show":true},
        {"format":"short","show":true}
      ]
    },
    {
      "type": "graph",
      "title": "HTTP Errors",
      "gridPos": {"x":0,"y":6,"w":12,"h":6},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"4..\"}[1m]))",
          "legendFormat": "4xx",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[1m]))",
          "legendFormat": "5xx",
          "refId": "B"
        }
      ],
      "lines": true,
      "linewidth": 2,
      "yaxes": [
        {"format":"req/s","label":"Errors","show":true},
        {"format":"short","show":true}
      ]
    },
    {
      "type": "text",
      "title": "Jaeger Traces",
      "gridPos": {"x":12,"y":6,"w":12,"h":2},
      "mode": "markdown",
      "content": "[View Traces in Jaeger](http://jaeger:16686/search)"
    }
  ]
}
