{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/Cars",
      "UpstreamHttpMethod": ["GET"],
      "DownstreamPathTemplate": "/Cars",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts":[
        {
          "Host": "autodealer",
          "Port": 8081
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/Cars",
      "UpstreamHttpMethod": ["POST", "PUT", "DELETE"],
      "DownstreamPathTemplate": "/Cars",
